<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<!-- "background shadow" -->
<item>
    <shape android:shape="rectangle" >
        <solid android:color="#FFffffff" />
        <corners android:radius="3dp" />
    </shape>
</item>
<!-- background color -->
<item
>
    <shape android:shape="rectangle" >
        <solid android:color="#ffffffff" />
        <corners android:radius="8dp" />
    </shape>
</item>
<!-- over left shadow -->
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="180"
            android:centerColor="#00FFFFFF"
            android:centerX="0.2"
            android:endColor="#00FFFFFF"
            android:startColor="#00FF0000" />

        <corners android:radius="8dp" />
    </shape>
</item>
<!-- over right shadow -->
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="360"
            android:centerColor="#00FFFFFF"
            android:centerX="0.2"
            android:endColor="#00FFFFFF"
            android:startColor="#00FF0000" />

        <corners android:radius="8dp" />
    </shape>
</item>
<!-- over top shadow -->
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="-90"
            android:centerColor="#00FFFFFF"
            android:centerY="0.2"
            android:endColor="#00FFFFFF"
            android:startColor="#99000000"
            android:type="linear" />

        <corners android:radius="8dp" />
    </shape>
</item>
<!-- over bottom shadow -->
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="90"
            android:centerColor="#00FFFFFF"
            android:centerY="0.1"
            android:endColor="#00FFFFFF"
            android:startColor="#99000000"
            android:type="linear" />

        <corners android:radius="8dp" />
    </shape>
</item>
</layer-list>